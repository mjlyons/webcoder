{
  "name": "webcoder",
  "description": "Code editor in your browser",
  "version": "0.0.1",
  "private": true,
  "author": "Mike Lyons <mike@mjlyons.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mjlyons/webcoder"
  },
  "scripts": {
    "build:client": "webpack -p --progress --color",
    "build:server": "gulp",
    "dev:client": "webpack-dev-server -d --inline --progress --colors",
    "start:server": "npm run build && cd build && node ./bin/www",
    "test:client": "jest",
    "test:server": "jest src",
    "lint:server": "gulp lint",
    "watch:build:client": "webpack -d --progress --color --watch",
    "watch:start:server": "nodemon --ignore build/ --exec 'npm test && npm run lint && npm start'",
    "watch:test:server": "nodemon --ignore build/ --exec 'npm test && npm run lint'"
  },
  "dependencies": {
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "body-parser": "~1.13.2",
    "classnames": "^2.2.1",
    "cookie-parser": "~1.3.5",
    "css-loader": "^0.23.1",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "flux": "^2.1.1",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-eslint": "^1.1.1",
    "gulp-if": "^2.0.0",
    "html-webpack-plugin": "^1.7.0",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "node-sass": "^3.4.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "sass-loader": "^3.1.2",
    "serve-favicon": "~2.3.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  },
  "devDependencies": {
    "babel-jest": "^6.0.1",
    "babel-polyfill": "^6.3.14",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "eslint-plugin-react": "^3.11.3",
    "jest-cli": "^0.8.2",
    "jest-webpack-alias": "^2.0.0",
    "nodemon": "^1.8.1",
    "react-addons-test-utils": "^0.14.3",
    "supertest": "^1.1.0",
    "webpack-dev-server": "^1.14.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/jestPreprocessor.js",
    "testPathDirs": ["<rootDir>/js"],
    "unmockedModulePathPatterns": [
      "debug",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/node_modules/classnames",
      "<rootDir>/style"
    ]
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/style/"
  ],
  "rootDir": "<rootDir>"
}
